{
  "name": "slack-project-monitor",
  "version": "1.0.0",
  "description": "AI-powered Slack monitoring system for creative agency project oversight",
  "main": "backend/server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon backend/server.js",
    "client": "cd frontend && npm start",
    "build": "cd frontend && npm run build",
    "build:prod": "cd frontend && npm run build && cd .. && npm run copy-build",
    "copy-build": "mkdir -p backend/public && cp -r frontend/build/* backend/public/",
    "install-all": "npm install && cd frontend && npm install",
    "start": "node backend/server.js",
    "test": "jest",
    "test:connection": "node backend/test-connection.js",
    "lint": "eslint backend/ frontend/src/",
    "lint:fix": "eslint backend/ frontend/src/ --fix"
  },
  "dependencies": {
    "@slack/bolt": "^3.14.0",
    "@slack/web-api": "^6.9.0",
    "axios": "^1.5.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.0.0",
    "json5": "^2.2.3",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.2",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "eslint": "^8.45.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.28.0",
    "jest": "^29.6.0",
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "slack",
    "monitoring",
    "ai",
    "project-management",
    "creative-agency"
  ],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
