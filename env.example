# Slack Configuration
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
SLACK_APP_TOKEN=xapp-your-app-token-here
SLACK_SIGNING_SECRET=your-signing-secret-here

# Channel IDs (get these from Slack)
MAIN_CHANNEL_ID=C1234567890  # Main title channel
PRODUCTION_CHANNEL_ID=C0987654321  # Asset production channel
CLIENT_CHANNEL_ID=C1357924680  # External client channel

# AI Configuration
ANTHROPIC_API_KEY=your-anthropic-key-here
# OR use OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here

# Database
MONGODB_URI=mongodb://localhost:27017/slack-monitor
# OR use MongoDB Atlas
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority

# Server Configuration
PORT=3001
NODE_ENV=development

# Dashboard Configuration
DASHBOARD_PORT=3000

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=logs/

# Security
SESSION_SECRET=your-session-secret-key
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
